{
  "kind": "collectionType",
  "collectionName": "study_cards",
  "info": {
    "singularName": "study-card",
    "pluralName": "study-cards",
    "displayName": "StudyCard",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer"
    },
    "number_of_cards": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "study_cards"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "study_card"
    },
    "card_type": {
      "type": "enumeration",
      "enum": [
        "Вопрос-ответ",
        "Шпаргалки",
        "Комбинированный"
      ],
      "required": true,
      "default": "Вопрос-ответ"
    }
  }
}
