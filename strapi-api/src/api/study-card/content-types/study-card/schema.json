{
  "kind": "collectionType",
  "collectionName": "study_cards",
  "info": {
    "singularName": "study-card",
    "pluralName": "study-cards",
    "displayName": "StudyCard"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer"
    },
    "number_of_cards": {
      "type": "integer"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "type": "media",
      "multiple": true
    },
    "subject": {
      "type": "string"
    },
    "card_type": {
      "type": "string"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    }
  }
}
