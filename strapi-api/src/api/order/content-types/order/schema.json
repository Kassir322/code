{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "total_amount": {
      "type": "decimal",
      "required": true
    },
    "order_status": {
      "type": "string",
      "default": "pending"
    },
    "payment_method": {
      "type": "string"
    },
    "shipping_method": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "order_item": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order-item.order-item",
      "inversedBy": "order"
    }
  }
}
