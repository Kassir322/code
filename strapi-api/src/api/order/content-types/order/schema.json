{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "total_amount": {
      "type": "decimal",
      "required": true
    },
    "order_status": {
      "type": "string",
      "default": "pending"
    },
    "payment_method": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "shipping_address": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address",
      "inversedBy": "orders"
    },
    "notes": {
      "type": "text"
    },
    "tracking_number": {
      "type": "string"
    },
    "shipping_method": {
      "type": "enumeration",
      "enum": [
        "courier",
        "post",
        "pickup",
        "sdek"
      ]
    },
    "cancellation_reason": {
      "type": "string"
    }
  }
}
