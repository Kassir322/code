{
	"kind": "collectionType",
	"collectionName": "addresses",
	"info": {
		"singularName": "address",
		"pluralName": "addresses",
		"displayName": "Address",
		"description": "Адреса доставки пользователей"
	},
	"options": {
		"draftAndPublish": false
	},
	"attributes": {
		"title": {
			"type": "string",
			"maxLength": 255,
			"minLength": 2,
			"required": true,
			"regex": "^[а-яА-ЯёЁ0-9\\s-]+$"
		},
		"recipient_name": {
			"type": "string",
			"required": true,
			"maxLength": 150,
			"minLength": 5,
			"regex": "^[а-яА-ЯёЁ\\s-]+$"
		},
		"recipient_phone": {
			"type": "string",
			"required": true,
			"regex": "^\\+7[0-9]{10}$"
		},
		"city": {
			"type": "string",
			"required": true,
			"minLength": 2,
			"regex": "^[а-яА-ЯёЁ\\s-]+$"
		},
		"street": {
			"type": "string",
			"required": true,
			"minLength": 2,
			"regex": "^[а-яА-ЯёЁ0-9\\s-\\.]+$"
		},
		"house": {
			"type": "string",
			"required": true,
			"regex": "^[0-9]+(?:\\/[0-9]+)?[а-яА-Я]?$"
		},
		"building": {
			"type": "string",
			"required": false,
			"regex": "^[0-9]+(?:\\/[0-9]+)?[а-яА-Я]?$"
		},
		"apartment": {
			"type": "string",
			"required": false,
			"regex": "^[0-9]+(?:\\/[0-9]+)?[а-яА-Я]?$"
		},
		"postal_code": {
			"type": "string",
			"required": true,
			"regex": "^[0-9]{6}$"
		},
		"comment": {
			"type": "text",
			"maxLength": 500
		},
		"is_default": {
			"type": "boolean",
			"default": false
		},
		"user": {
			"type": "relation",
			"relation": "manyToOne",
			"target": "plugin::users-permissions.user",
			"inversedBy": "addresses"
		}
	}
}
